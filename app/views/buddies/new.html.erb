<div class="container-new">
  <div class="container-user">
    <h1>New Buddy</h1>
    <div class="form-container">
      <%= form_with model: @buddy, local: true do |form| %>
        <div class="form-group">
          <%= form.label :photo %>
          <%= form.file_field :photo, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :nom %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
         <div class="field-container">
          <%= form.label :"Buddy depuis" %>
          <%= form.select :joined_year, options_for_select((2000..Date.current.year).to_a.reverse), { prompt: "Select Year" }, { class: "form-control" } %>
          </div>
           <div class="field-container">
          <%= form.label :prix_par_jour %>
          <%= form.number_field :price_per_day, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= form.label :options %>
          <%= form.select :options, ["Alcoolique", "Marroneur", "Sexy", "Humour de merde", "Parfait comme Gaulthier"], {}, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :catégories %>
          <%= form.select :categories, ["Tarpin", "Estrasse", "Minot", "Brèle"], {}, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.submit 'Créer mon buddy', class: "submit-button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
